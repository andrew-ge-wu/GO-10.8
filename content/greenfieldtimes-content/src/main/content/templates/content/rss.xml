    <output-templates mode="www">
      <id>example.Rss.ot</id>
    </output-templates>
    <output-templates mode="link">
      <id>example.RssLink.ot</id>
    </output-templates>
  </input-template>
  <output-template name="example.RssLink.ot" input-template="p.siteengine.BaseOutputTemplate">
    <content-xml>
      <component group="isCacheable" name="value">true</component>
      <!-- Note that link tag omits "/" at the end to conform to HTML 4.01 Strict. -->
      <contentref group="output/renderer" name="selected">
        <contentid>
          <externalid>p.siteengine.VelocityFileRenderer</externalid>
        </contentid>
      </contentref>
      <component group="output/renderer/selected/defaultVelocityViewFileName" name="value">/WEB-INF/velocity/link/rss.vm</component>     
      <contentref group="output/controller" name="selected">
        <contentid>
          <externalid>p.siteengine.JavaClassRenderController</externalid>
        </contentid>
      </contentref>
      <component group="output/controller/selected/renderControllerClass" name="value">example.content.rss.RenderControllerRssLink</component>
    </content-xml>
  </output-template>
  <output-template name="example.Rss.ot" input-template="p.siteengine.XmlOutputTemplate">
    <content-xml>
      <contentref group="output/renderer" name="selected">
        <contentid>
          <externalid>p.siteengine.VelocityFileRenderer</externalid>
        </contentid>
      </contentref>
      <component group="output/renderer/selected/defaultVelocityViewFileName" name="value">/WEB-INF/velocity/www/rss.vm</component>     
      <contentref group="output/controller" name="selected">
        <contentid>
          <externalid>p.siteengine.JavaClassRenderController</externalid>
        </contentid>
      </contentref>
      <component group="output/controller/selected/renderControllerClass" name="value">example.content.rss.RenderControllerRssArticle</component>
    </content-xml>
  </output-template>
  <input-template name="p.siteengine.FeedContentListWrapper">
