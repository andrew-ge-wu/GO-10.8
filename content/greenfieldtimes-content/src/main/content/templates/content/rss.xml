    <param name="EditState_preview">false</param>
    <param name="EditNewState_preview">false</param>
    <param name="ViewState_insert">false</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndFastInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditNewState_saveAndClose">false</param>
    <param name="EditNewState_saveAndInsert">true</param>
    <param name="EditNewState_saveAndFastInsert">false</param>
    <param name="EditNewState_saveAndView">false</param>
    <param name="ViewState_copy">true</param>
    <param name="cloneSecurityParent">currentOrHome</param>
    <param name="titleOfNewContent">p.siteengine.rss.template.new</param>
    <editor contextName="orchid_SEARCHITEM">example.widget.OSearchItemBaseWidget</editor>
    <viewer contextName="orchid_SEARCHITEM">example.widget.OSearchItemBaseWidget</viewer>
    <editor contextName="orchid_TOCENTRY">com.atex.plugins.baseline.widget.OContentListEntryBasePolicyWidget</editor>
    <viewer contextName="orchid_TOCENTRY">com.atex.plugins.baseline.widget.OContentListEntryBasePolicyWidget</viewer>
    <type>Article</type>
    <param name="templateIcon">rss.png</param>
    <layout name="rssColumnHolder" input-template="p.ColumnHolder" label="">
      <layout name="content" input-template="p.Column" label="">
        <!-- Feed title -->
        <field name="title" input-template="p.ContentName" label="p.siteengine.rss.channel.title" required="true" />
        <!-- Feed description -->
        <field name="description" input-template="p.TextArea" label="p.siteengine.rss.channel.description" />
        <!--  Feed source -->
        <field name="publishingQueues" input-template="p.ContentListEntryContainer" label="cm.general.PublishingQueue">
            <param name="contentListName">articleQueues</param>
            <param name="showActionButtonsInViewMode">false</param>
        </field>
      </layout>
      <layout name="settings" input-template="p.Column" label="">
        <param name="width">30</param>
        <param name="widthRelative">true</param>
        <!-- Feed image -->
        <field name="image" input-template="p.ImageManager" label="p.siteengine.rss.channel.image">
          <param name="mode">singleUploadSingleSelect</param>
          <param name="staticFilename">image</param>
          <param name="showPasteButton">false</param>
          <param name="maxFileSize">10000</param>
          <param name="maxNofPixels">5000000</param>
          <param name="abortNofPixels">10000000</param>
          <param name="allowEdit">false</param>
          <param name="appletWidth">480</param>
          <param name="appletHeight">480</param>
          <param name="appletState">
            <![CDATA[<?xml version="1.0" encoding="iso-8859-1"?>
		                    <imageapplet>
		                        <buttonset name="basebs">
		                            <button label="Rotate" icon="rotate_cw.png" action="ClockwiseRotateImageAppletAction"/>
		                            <button label="Mirror" icon="mirror.png" action="HorizontalMirrorImageAppletAction"/>
		                            <button label="Crop" icon="crop.png" action="CropEditImageAppletAction"/>
		                            <button label="Scramble" icon="photo_portrait.png" action="ScrambleEditImageAppletAction"/>
		                            <button label="Zoom In" icon="zoom_in.png" action="ZoomInImageAppletAction"/>
		                            <button label="Zoom Out" icon="zoom_out.png" action="ZoomOutImageAppletAction"/>
		                        </buttonset>
		                        <editmode name="default">
		                            <buttonset>
		                                <includebuttonset name="basebs"/>
		                            </buttonset>
		                            <derivative name="default" label="Default" description="Default"/>
		                        </editmode>
		                    </imageapplet>
		                ]]>
          </param>
        </field>
        <!-- Feed category -->
        <field name="categories" input-template="p.Metadata" label="cm.general.Categorization"></field>
