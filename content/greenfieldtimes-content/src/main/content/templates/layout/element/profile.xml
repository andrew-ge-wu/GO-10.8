<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">
  <input-template name="example.Profile" label="cm.template.example.Profile">
    <policy>example.layout.element.ElementPolicy</policy>
    <editor>com.polopoly.cm.app.widget.OTopPolicyWidget</editor>
    <viewer>com.polopoly.cm.app.widget.OTopPolicyWidget</viewer>
     
    <type>LayoutElement</type>
    <param name="ViewState_insert">false</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndFastInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditNewState_saveAndClose">false</param>
    <param name="EditNewState_saveAndInsert">false</param>
    <param name="EditNewState_saveAndFastInsert">false</param>
    <param name="EditNewState_saveAndView">false</param>
    <param name="titleOfNewContent">cm.template.example.Profile.new</param>
    <param name="templateIcon">form_blue.png</param>
    <param name="renderTemplateIconInSelect">true</param>
    <editor contextName="orchid_TOCENTRY">com.atex.plugins.baseline.widget.OContentListEntryBasePolicyWidget</editor>
    <viewer contextName="orchid_TOCENTRY">com.atex.plugins.baseline.widget.OContentListEntryBasePolicyWidget</viewer>
 
    <field name="name" input-template="p.ContentName" label="cm.label.Name" required="true" />

    <output-templates mode="www">
      <id>example.Profile.ot</id>
    </output-templates>    
  </input-template>

  <output-template name="example.Profile.ot" input-template="p.siteengine.ArticleOutputTemplate">
    <content-xml>
      <component group="output/modelKeyMode" name="selected">no-cache</component>
      <contentref group="output/controller" name="selected">
        <contentid>
          <externalid>p.siteengine.JavaClassRenderController</externalid>
        </contentid>
      </contentref> 
      <contentref group="output/renderer" name="selected">
        <contentid>
          <externalid>p.siteengine.VelocityFileRenderer</externalid>
        </contentid>
      </contentref>
      <component group="output/renderer/selected/defaultVelocityViewFileName" name="value">/WEB-INF/velocity/www/profile.vm</component>
      <contentref group="output/controller" name="selected">
        <contentid>
          <externalid>p.siteengine.JavaClassRenderController</externalid>
        </contentid>
      </contentref>
      <component group="output/controller/selected/renderControllerClass" name="value">example.membership.RenderControllerProfileElement</component>
    </content-xml>
  </output-template>
</template-definition>