<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">
  <input-template name="example.CommentsElement" label="p.siteengine.community.comments.template">
    <policy>example.layout.element.comments.CommentsElementPolicy</policy>

    <editor>com.polopoly.cm.app.widget.OTopPolicyWidget</editor>
    <viewer>com.polopoly.cm.app.widget.OTopPolicyWidget</viewer>

    <type>LayoutElement</type>

    <param name="ViewState_insert">false</param>
    <param name="ViewState_refresh">true</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndFastInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditNewState_saveAndClose">false</param>
    <param name="EditNewState_saveAndInsert">false</param>
    <param name="EditNewState_saveAndFastInsert">true</param>
    <param name="EditNewState_saveAndView">false</param>
    <param name="titleOfNewContent">p.siteengine.community.comments.template.new</param>
    <param name="templateIcon">message.png</param>
    <param name="renderTemplateIconInSelect">true</param>

    <editor contextName="orchid_TOCENTRY">com.atex.plugins.baseline.widget.OContentListEntryBasePolicyWidget</editor>
    <viewer contextName="orchid_TOCENTRY">com.atex.plugins.baseline.widget.OContentListEntryBasePolicyWidget</viewer>

    <field name="name" input-template="p.ContentName" label="cm.label.Name" required="true" />
    <field name="comments" input-template="p.CommentBrowser" label="cm.template.p.comment.comments"/>

    <field name="commentSettings" input-template="example.CommentSettings" label="p.siteengine.community.comments.settings">
      <help>p.siteengine.community.comments.settings.help</help>
      <param name="inlineHelp">true</param>
    </field>

    <output-templates mode="www">
      <id>example.CommentsElement.ot</id>
    </output-templates>
    <output-templates mode="mobile">
      <id>example.MobileCommentsElement.ot</id>
    </output-templates>
  </input-template>

  <output-template name="example.CommentsElement.ot" input-template="p.siteengine.ElementOutputTemplate">
    <content-xml>
      <component group="output/modelKeyMode" name="selected">no-cache</component>
      <contentref group="output/renderer" name="selected">
        <contentid>
          <externalid>p.siteengine.VelocityFileRenderer</externalid>
        </contentid>
      </contentref>
      <component group="output/renderer/selected/defaultVelocityViewFileName" name="value">/WEB-INF/velocity/www/comments.vm</component>
      <contentref group="output/controller" name="selected">
        <contentid>
          <externalid>p.siteengine.JavaClassRenderController</externalid>
        </contentid>
      </contentref>
      <component group="output/controller/selected/renderControllerClass" name="value">example.layout.element.comments.RenderControllerCommentsElement</component>
      <component group="preview/controller" name="value">com.polopoly.siteengine.preview.PreviewControllerStandard</component>
    </content-xml>
  </output-template>

  <output-template name="example.MobileCommentsElement.ot" input-template="p.siteengine.ElementOutputTemplate">
    <content-xml>
      <component group="output/modelKeyMode" name="selected">no-cache</component>
      <contentref group="output/renderer" name="selected">
        <contentid>
          <externalid>p.siteengine.VelocityFileRenderer</externalid>
        </contentid>
      </contentref>
      <component group="output/renderer/selected/defaultVelocityViewFileName" name="value">/WEB-INF/velocity/mobile/comments.vm</component>
      <contentref group="output/controller" name="selected">
        <contentid>
          <externalid>p.siteengine.JavaClassRenderController</externalid>
        </contentid>
      </contentref>
      <component group="output/controller/selected/renderControllerClass" name="value">example.layout.element.comments.RenderControllerCommentsElement</component>
      <component group="preview/controller" name="value">com.polopoly.siteengine.preview.PreviewControllerStandard</component>
    </content-xml>
  </output-template>
</template-definition>
