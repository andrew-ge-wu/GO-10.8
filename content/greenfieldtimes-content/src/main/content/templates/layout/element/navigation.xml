<?xml version="1.0" encoding="UTF-8"?>
<template-definition version="1.0" xmlns="http://www.polopoly.com/polopoly/cm/app/xml">
  <input-template name="example.NavigationElement" label="cm.template.example.NavigationElement">
    <policy>example.layout.element.ElementPolicy</policy>
    <editor>com.polopoly.cm.app.widget.OTopPolicyWidget</editor>
    <viewer>com.polopoly.cm.app.widget.OTopPolicyWidget</viewer>
    <type>LayoutElement</type>
    <param name="ViewState_insert">false</param>
    <param name="EditState_saveAndClose">true</param>
    <param name="EditState_saveAndInsert">false</param>
    <param name="EditState_saveAndFastInsert">false</param>
    <param name="EditState_saveAndView">true</param>
    <param name="EditNewState_saveAndClose">false</param>
    <param name="EditNewState_saveAndInsert">false</param>
    <param name="EditNewState_saveAndFastInsert">true</param>
    <param name="EditNewState_saveAndView">false</param>
    <param name="titleOfNewContent">cm.template.example.NavigationElement.new</param>
    <param name="templateIcon">compass.png</param>
    <param name="renderTemplateIconInSelect">true</param>
    <editor contextName="orchid_TOCENTRY">com.atex.plugins.baseline.widget.OContentListEntryBasePolicyWidget</editor>
    <viewer contextName="orchid_TOCENTRY">com.atex.plugins.baseline.widget.OContentListEntryBasePolicyWidget</viewer>
    <field name="name" input-template="p.ContentName" label="cm.label.Name" required="false" />
    <field name="navlevel" input-template="p.RadioButtonGroup" label="cm.template.example.NavigationElement.navigationLevel">
      <param name="label_0">cm.template.example.NavigationElement.navigationLevel.topSite</param>
      <param name="value_0">menuTop</param>
      <param name="label_1">cm.template.example.NavigationElement.navigationLevel.currentSite</param>
      <param name="value_1">menuSite</param>
      <param name="label_2">cm.template.example.NavigationElement.navigationLevel.currentPage</param>
      <param name="value_2">menuPage</param>
      <param name="selected">0</param>
      <param name="horizontalRendering">true</param>
    </field>
    <field name="hideOnFrontPage" input-template="p.Checkbox" label="cm.template.example.NavigationElement.hideOnFrontpage">
      <param name="checked">false</param>
    </field>
    <field name="multiLevel" input-template="p.RadioButtonGroup" label="cm.template.example.NavigationElement.nofSubPageLevels">
      <param name="label_0">cm.template.example.NavigationElement.nofSubPageLevels.oneLevelWOHeader</param>
      <param name="value_0">oneNoHeader</param>
      <param name="label_1">cm.template.example.NavigationElement.nofSubPageLevels.oneLevelWHeader</param>
      <param name="value_1">oneHeader</param>
      <param name="label_2">cm.template.example.NavigationElement.nofSubPageLevels.twoLevelsWHeader</param>
      <param name="value_2">twoHeader</param>
      <param name="selected">0</param>
      <param name="horizontalRendering">true</param>
    </field>
    <field name="id" input-template="p.ExternalId" label="cm.label.ExternalId">
      <param name="maxlength">100</param>
    </field>
    <output-templates mode="mobile">
      <id>example.MobileNavigationElement.ot</id>
    </output-templates>
    <output-templates mode="www">
      <id>example.NavigationElement.ot</id>
    </output-templates>
  </input-template>
  <output-template name="example.NavigationElement.ot" input-template="p.siteengine.ElementOutputTemplate">
    <content-xml>
      <component group="output/modelKeyMode" name="selected">no-cache</component>
      <contentref group="output/renderer" name="selected">
        <contentid>
          <externalid>p.siteengine.VelocityFileRenderer</externalid>
        </contentid>
      </contentref>
      <component group="output/renderer/selected/defaultVelocityViewFileName" name="value">/WEB-INF/velocity/www/navigation.vm</component>
      <component group="preview/controller" name="value">com.polopoly.siteengine.preview.PreviewControllerStandard</component>
    </content-xml>
  </output-template>
  <output-template name="example.MobileNavigationElement.ot" input-template="p.siteengine.ElementOutputTemplate">
    <content-xml>
      <component group="output/modelKeyMode" name="selected">no-cache</component>
      <contentref group="output/renderer" name="selected">
        <contentid>
          <externalid>p.siteengine.VelocityFileRenderer</externalid>
        </contentid>
      </contentref>
      <component group="output/renderer/selected/defaultVelocityViewFileName" name="value">/WEB-INF/velocity/mobile/navigation.vm</component>
      <component group="preview/controller" name="value">com.polopoly.siteengine.preview.PreviewControllerStandard</component>
    </content-xml>
  </output-template>
</template-definition>
