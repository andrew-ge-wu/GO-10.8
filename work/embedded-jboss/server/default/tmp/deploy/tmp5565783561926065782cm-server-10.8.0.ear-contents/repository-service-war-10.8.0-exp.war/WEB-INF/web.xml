  <!-- filter-mapping>
    <filter-name>pacemaker</filter-name>
    <url-pattern>/status</url-pattern>
  </filter-mapping -->

  <!--====================== Application initilizer -->
  <listener>
    <listener-class>com.polopoly.application.RecorderInitializationContextListener</listener-class>
  </listener>

  <!--======================  Status servlet -->
  <servlet>
    <servlet-name>mbeanstatus</servlet-name>
    <servlet-class>com.polopoly.management.servlet.StatusServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>mbeanstatus</servlet-name>
    <url-pattern>/status</url-pattern>
  </servlet-mapping>

  <!--======================  EJB local interfaces -->
  <ejb-local-ref id="EJBLocalRef_3">
    <ejb-ref-name>ejb/TxRecorderServiceLocal</ejb-ref-name>
    <ejb-ref-type>Session</ejb-ref-type>
    <local-home>com.polopoly.ejb.cm.TxRecorderServiceLocalHome</local-home>
    <local>com.polopoly.ejb.cm.TxRecorderServiceLocal</local>
    <ejb-link>TxRecorderService</ejb-link>
  </ejb-local-ref>

</web-app>

