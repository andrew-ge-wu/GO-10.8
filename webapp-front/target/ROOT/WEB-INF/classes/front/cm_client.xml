<?xml version="1.0" encoding="UTF-8"?>
<model>

  <!-- Filter settings for front. -->
  <contentFilterSettings>
    <defaultVersion>DEFAULT-STAGE</defaultVersion>
    <contentFilterClassNames>
      <filter>com.polopoly.cm.client.filter.StandardFrontContentFilter</filter>
    </contentFilterClassNames>
  </contentFilterSettings>

  <!--
    It is possible to override the location of the persistent caches
    for the CM client here. If they are absolute, they will override
    all other settings, otherwise they will be relative to either
    cm.localEnvironment.clientCacheBaseDir if it is set (in
    connection.properties), or otherwise to the web container's temp directory.

  <diskCacheSettings>
    <contentCacheDirectory>/var/polopoly/front/content</contentCacheDirectory>
    <filesCacheDirectory>/var/polopoly/front/files</filesCacheDirectory>
  </diskCacheSettings>
  -->

</model>
