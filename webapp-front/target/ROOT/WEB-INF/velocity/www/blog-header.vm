<form id="blogIdForm">
  <input type="hidden" name="blogId" id="blogId" value="$content.contentId.contentId.contentIdString" />
</form>
  
<div class="header">
  <div class="toolbar">
    <form class="requiresBlogOwner" action="$m.stack.blogUrl">
      <input type="hidden" name="createPost" value="true" />
      <input type="submit" class="submit" value="$rs.blog.createNewPost" />
    </form>
    <form class="requiresBlogOwner" action="$m.stack.blogUrl">
      <input type="hidden" name="editBlog" value="true" />
      <input type="submit" class="submit" value="$rs.blog.blogSettingsSmall" />
    </form>
  </div>
  <h1><a href="#link({"path":$content.parentIds, 'htmlEncodeLink': 'true', "":""})">$content.name</a></h1>
</div>
